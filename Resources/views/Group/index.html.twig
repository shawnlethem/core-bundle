{% extends 'base.html.twig' %}

{% trans_default_domain 'VideoGamesRecordsCoreBundle' %}

{% block title %}{{ group.getLibGroup() }} – {{ group.getGame().getLibGame() }}{% endblock %}

{% block body_id 'group_index' %}

{% block body %}
    <h1>{{ group.getLibGroup() }} – {{ group.getGame().getLibGame() }}</h1>

    <table class="group-list">
        <thead>
        <tr>
            <th scope="col">{{ 'group.chart.list'|trans }}</th>
            <th scope="col">{{ 'group.scores'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for chart in group.getCharts %}
            <tr>
                <td><a href="{{ path('vgr_chart_index', {'id': chart.getIdChart()}) }}">{{ chart.getLibChart() }}</a>
                </td>
                <td>{{ chart.getNbPost() }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>{{ 'group.ranking.point'|trans }}</h2>
    <table class="leaderboard">
        <thead>
        <tr>
            <th scope="col">{{ 'ranking.rank'|trans }}</th>
            <th scope="col">{{ 'ranking.nickname'|trans }}</th>
            <th scope="col">{{ 'ranking.points'|trans }}</th>
            <th scope="col">{{ 'ranking.number.score'|trans }}</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <td colspan="4">
                <a href="{{ path('vgr_group_ranking_points', {'id': group.getIdGroup()}) }}">{{ 'group.ranking.point.full'|trans }}</a>
            </td>
        </tr>
        </tfoot>
        <tbody>
        {% for row in rankingPoints %}
            <tr {{ row.getPointsBackgroundColor()|raw }}>
                <td>{{ row.getRankPoint() }}</td>
                <td>{{ row.getPlayer().getPseudo() }}</td>
                <td>{{ row.getPointChart() }}</td>
                <td>{{ row.getNbChart() }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">{{ 'group.no_player'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h2>{{ 'group.ranking.medal'|trans }}</h2>
    <table class="leaderboard">
        <thead>
        <tr>
            <th scope="col">{{ 'ranking.rank'|trans }}</th>
            <th scope="col">{{ 'ranking.nickname'|trans }}</th>
            <th scope="col">{{ 'ranking.platinum'|trans }}</th>
            <th scope="col">{{ 'ranking.gold'|trans }}</th>
            <th scope="col">{{ 'ranking.silver'|trans }}</th>
            <th scope="col">{{ 'ranking.bronze'|trans }}</th>
        </tr>
        </thead>
        <tfoot>
        <tr>
            <td colspan="6">
                <a href="{{ path('vgr_group_ranking_medals', {'id': group.getIdGroup()}) }}">{{ 'group.ranking.medal.full'|trans }}</a>
            </td>
        </tr>
        </tfoot>
        <tbody>
        {% for row in rankingMedals %}
            <tr {{ row.getMedalsBackgroundColor()|raw }}>
                <td>{{ row.getRankMedal() }}</td>
                <td>{{ row.getPlayer().getPseudo() }}</td>
                <td>{{ row.getRank0() }}</td>
                <td>{{ row.getRank1() }}</td>
                <td>{{ row.getRank2() }}</td>
                <td>{{ row.getRank3() }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">{{ 'group.no_player'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
